<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center;">Edit the Campground</h1>
    <div style="margin:0 auto; width:30%;">
      <form  action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" >
            <div class="form-group">
                <label for="name">Campground Name:</label>
               <input type = "text" class="form-control " name = "campground[name]" value="<%= campground.name %>" id="name">
            </div>
            <div class="form-group">
                <label for="price">Price:</label>
               <input type = "number" class="form-control " name = "campground[price]" value="<%= campground.price %>" id="price" min="1" step="1">
            </div>
            <div class="form-group">
                <label for="image">Campground Image URL:</label>
                <input type="text" class="form-control " name = "campground[image]" value="<%= campground.image %>" id="image">
            </div>
            <div class="form-group">
                <label for="desc">Campground Image Description:</label>
                <input type="text" class="form-control " name = "campground[description]" value="<%= campground.description %>" id="desc">
            </div>
            
            
            
            <input type= "submit" class="btn btn-primary">
        </form>  
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>