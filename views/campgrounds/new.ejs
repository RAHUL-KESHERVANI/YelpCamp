<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center;">Create a new Campground</h1>
    <div style="margin:0 auto; width:30%;">
      <form  action="/campgrounds" method="POST" >
            <div class="form-group">
                <label for="name">Campground Name:</label>
               <input type = "text" class="form-control " name = "name" placeholder="name" id="name">
            </div>
            <div class="form-group">
                <label for="price">Campground Name:</label>
               <input type = "number" class="form-control " name = "price" placeholder="price" id="price" min="1" step="1">
            </div>
            <div class="form-group">
                <label for="image">Campground Image URL:</label>
                <input type="text" class="form-control " name = "url" placeholder="image url" id="image">
            </div>
            <div class="form-group">
                <label for="desc">Campground Image Description:</label>
                <input type="text" class="form-control " name = "description" placeholder="Description" id="desc">
            </div>
            
            
            
            <input type= "submit" class="btn btn-primary">
        </form>  
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>