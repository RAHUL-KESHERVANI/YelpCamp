<% include ../partials/header %>



<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to My YelpCamp</h1>
            <p>View our special Campgrounds</p>
            <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
    
    
    <div class="row text-center">
        <div class="col-lg-12">
            <p>Our most popular campground</p>
        </div>
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div  class="d-block img-thumbnail">
                    <img class=" img-fluid" src="<%= campground.image %>">
                    <div class="figure-caption" >
                        <h6><%= campground.name %></h6>
                        
                        <p><a class="btn btn-primary" href="/campgrounds/<%= campground._id %>"> More Info</a></p>
                    </div>
                </div>
            </div>
         <% }) %>
    </div>
    
    
    
</div>

<% include ../partials/footer %>